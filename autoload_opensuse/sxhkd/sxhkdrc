#note: use xev to figure out the key names

# terminal
super + Return
    alacritty &

# rofi
super + space
    rofi -show drun & #whatever the fuck, it was running another executable
    #/usr/bin/rofi -show drun -theme grey #whatever the fuck, it was running another executable

# launch apps
super + d; {u,i,o,j,k,l}
    {\
        flatpak run com.spotify.Client,\
        flatpak run com.discordapp.Discord,\
        alacritty --command lf,\
        firefox,\
        brave-browser,\
        dolphin,\
    } &


# focus or send to the given workspace
super + {m, n}; {1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# focus or send to the given workspace
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'


# preselect the direction (and cancel)
super + {y,u,i,o,p}
    bspc node -p {west,south,north,east,cancel}

# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local
super + bracketleft
    bspc node -n 'last.!automatic.local'



# redshift
super +  comma
    redshift -P -O 3500 &
super +  period
    redshift -P -O 6500 &



# window mode switching
super + s; {h,j,k,l}
    {\
        bspc desktop -l next,\
        bspc node -t floating,\
        bspc node -t tiled,\
        bspc node -t fullscreen,\
    } &



# add a rofi power menu

# shutdown
super + F1
    systemctl poweroff

# reboot
super + F2
    systemctl reboot

# logout
super + F3
    pkexec --user root pkill -u terrior

# sleep
super + F4
    systemctl suspend

# restart bspwm
super + shift + r
    bspc wm -r

# restart sxhkd
super + shift + t
    pkill -USR1 -x sxhkd



# expand a window by moving one of its sides outward
super + shift + {y,u,i,o}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its sides inward
super + shift + {n,m,comma,period}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}






