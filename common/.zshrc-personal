cdmk() {
    mkdir -p $1
    cd $1
}

sayhi() {
    echo hi
}

pyv() {
    VENVPATH="${HOME}""/venvs/"$1
    if [ -d "$VENVPATH" ]; then
        source "$VENVPATH""/bin/activate"
    else
        echo "Could not find virtual environment"
    fi
}

ns() {
    VENVPATH="${HOME}""/shells/"$1".nix"
    if [ -f "$VENVPATH" ]; then
        nix-shell "$VENVPATH" --command zsh
    else
        echo "Could not find virtual environment"
    fi
}

move() {
    if [ $# != 2 ]; then
        echo "move: exactly two arguments are required"
    else
        cp -i $1 $2 && trash $1
    fi
}

