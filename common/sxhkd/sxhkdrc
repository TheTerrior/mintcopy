# night mode intensities (6500 off)
super + ctrl + KP_Right
        redshift -P -O 1500 &

super + ctrl + KP_Left
        redshift -P -O 2500 &

super + ctrl + KP_Up
        redshift -P -O 3500 &

super + ctrl + KP_Down
        redshift -P -O 6500 &

super + Prior
        redshift -P -O 2500 &

super + Next
        redshift -P -O 6500 &




